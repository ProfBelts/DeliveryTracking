@page
@{
    ViewData["Title"] = "Delivery Tracker";
}

<div class="container">
    <main>
        <section class="tracking-section">
            <h2>Track Your Delivery with Ease!</h2>
            <p>Stay updated on your parcel’s journey. Enter your tracking ID and get real-time updates instantly.</p>
            <div class="tracking-input">
                <input type="text" placeholder="Enter Parcel ID">
                <button>Search</button>
            </div>
        </section>

        <section class="delivery-icon">
            <!-- SVG or image can go here -->
            <img src="~/images/truck-icon.png" alt="Delivery Truck Icon">
        </section>
    </main>
</div>
